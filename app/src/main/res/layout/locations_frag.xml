<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="3">


    <ImageButton
        android:id="@+id/findPlace"
        android:layout_width="wrap_content"
        android:layout_height="32dp"
        android:layout_gravity="center"
        android:layout_marginTop="5dp"
        android:layout_weight="0.2"
        android:background="@drawable/map1"
        tools:ignore="ContentDescription,HardcodedText" />

    <TextView
        android:id="@+id/searched_address"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/findPlace"
        android:layout_margin="5dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_weight="1.7"
        android:gravity="center"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:text="Click on marker to Add Location"
        android:textColor="@color/cardview_dark_background"
        android:textSize="16sp"
        tools:ignore="HardcodedText,ObsoleteLayoutParam,RtlHardcoded,SpUsage" />

    <TextView
        android:id="@+id/next2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:layout_marginBottom="5dp"
        android:layout_marginRight="50dp"
        android:layout_weight="1"
        android:drawableRight="@drawable/rightarrow"
        android:gravity="center"
        android:text="Next"
        android:textSize="19dp"
        tools:ignore="HardcodedText,ObsoleteLayoutParam,RtlHardcoded,SpUsage" />

</LinearLayout>