<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/LL"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingLeft="5dp"
    android:paddingRight="5dp"
    android:weightSum="1">


    <android.support.v7.widget.CardView
        android:id="@+id/card"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        app:cardCornerRadius="4dp"
        app:cardPreventCornerOverlap="true"
        tools:ignore="InefficientWeight">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="95dp">

            <ImageView
                android:id="@+id/imgView"
                android:layout_width="85dp"
                android:layout_height="match_parent"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginRight="10dp"

                android:adjustViewBounds="true"
                android:scaleType="fitXY"
                tools:ignore="ContentDescription,ObsoleteLayoutParam" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="332.85"
                android:orientation="vertical"
                android:padding="5dp">

                <TextView
                    android:id="@+id/txtViewer"
                    android:layout_width="match_parent"
                    android:layout_height="65dp"
                    android:layout_above="@+id/imageView3"
                    android:layout_marginRight="0dp"
                    android:gravity="left"
                    android:maxLines="2"
                    android:textColor="@android:color/background_dark"
                    android:textSize="16sp"
                    tools:ignore="InefficientWeight,RtlHardcoded,SpUsage" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="2dp">

                    <ImageView
                        android:id="@+id/imageView3"
                        android:layout_width="14dp"
                        android:layout_height="14dp"

                        android:layout_gravity="center"
                        app:srcCompat="@drawable/holoheart"
                        tools:ignore="ContentDescription" />

                    <TextView
                        android:id="@+id/likes"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignBottom="@+id/imageView4"
                        android:layout_gravity="center"
                        android:layout_marginLeft="5dp"
                        android:layout_toEndOf="@+id/imageView3"
                        android:paddingBottom="0dp"
                        android:text="26 Likes"
                        android:textSize="12sp"
                        tools:ignore="HardcodedText,RtlHardcoded" />

                    <ImageView
                        android:id="@+id/imageView4"
                        android:layout_width="14dp"
                        android:layout_height="14dp"
                        android:layout_alignTop="@+id/imageView3"
                        android:layout_gravity="center"
                        android:layout_marginStart="10dp"
                        android:layout_toEndOf="@+id/likes"
                        app:srcCompat="@drawable/holocomment"
                        tools:ignore="ContentDescription" />

                    <TextView
                        android:id="@+id/comments"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignBaseline="@+id/likes"
                        android:layout_alignBottom="@+id/likes"
                        android:layout_gravity="center"
                        android:layout_marginStart="5dp"
                        android:layout_toEndOf="@+id/imageView4"
                        android:text="26 Comments"
                        android:textSize="12sp"
                        tools:ignore="HardcodedText" />

                    <ImageView
                        android:id="@+id/imageView6"
                        android:layout_width="14dp"
                        android:layout_height="5dp"
                        android:layout_alignBottom="@+id/likes"
                        android:layout_alignParentEnd="true"
                        android:layout_gravity="center"
                        android:layout_margin="10dp"
                        android:layout_marginRight="5dp"
                        android:layout_weight="1"
                        android:scaleType="fitEnd"
                        app:srcCompat="@drawable/threedots"
                        tools:ignore="ContentDescription" />
                </LinearLayout>

            </LinearLayout>
        </LinearLayout>
    </android.support.v7.widget.CardView>

</LinearLayout>
